{
	"compilerOptions": {
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"strictNullChecks": true,
        "skipLibCheck": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": ".",
		"outDir": "../client/server",
		"lib": [ "es2016" ],
		"sourceMap": true
	},
    "include": [
        "src", "server/src/server.ts"
    ],
	"exclude": [
		"node_modules",
		"server"
	]
}
