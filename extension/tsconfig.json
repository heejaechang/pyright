{
	"compilerOptions": {
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"strictNullChecks": true,
        "skipLibCheck": true,
		"target": "es6",
		"module": "commonjs",
		"lib": [ "es2019" ],
		"sourceMap": true,
		"outDir": "out",
		"strict": true,
		"composite": true,
		"declaration": true,
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		"server",
		"out"
	],
	"include": [
		"./src/**/*",
		"./package.json"
	]
}
