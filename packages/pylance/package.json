        "webpack": "^5.0.0-rc.5",
        "webpack-cli": "^3.3.12",
        "webpack-obfuscator": "^1.12.1"
    },
    "files": [
        "/dist"
    ],
    "main": "langserver.index.js",
    "bin": {
        "pylance-langserver": "langserver.index.js"
