{
    "name": "pylance-root",
    "private": true,
    "scripts": {
        "postinstall": "npm run bootstrap",
        "bootstrap": "cross-env SKIP_LERNA_BOOTSTRAP=yes lerna bootstrap --concurrency 4",
        "hoist": "cross-env SKIP_LERNA_BOOTSTRAP=yes lerna bootstrap --hoist",
        "clean": "lerna run --no-bail --stream clean",
        "install:all": "npm install && lerna exec --no-bail npm install",
        "update:all": "npm update && lerna exec --no-bail npm update",
        "build:debugclient:dev": "cd packages/pylance-client && npm run webpack",
        "watch:debugclient": "cd packages/pylance-client && npm run webpack-dev",
        "build:extension:dev": "cd packages/vscode-pylance && npm run webpack",
        "watch:extension": "cd packages/vscode-pylance && npm run webpack-dev",
        "build:extension:tests": "cd packages/vscode-pylance && npm run build:tests",
        "check": "npm run check:syncpack && npm run check:eslint && npm run check:prettier",
        "check:syncpack": "syncpack list-mismatches --source \"{,packages/*/,packages/pyright/packages/*/}package.json\"",
        "fix:syncpack": "syncpack fix-mismatches --source \"{,packages/*/,packages/pyright/packages/*/}package.json\" --indent \"    \" && npm run install:all",
        "check:eslint": "eslint .",
        "fix:eslint": "eslint --fix .",
        "check:prettier": "prettier -c .",
        "fix:prettier": "prettier --write ."
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "cross-env": "^7.0.2",
        "detect-indent": "^6.0.0",
        "eslint": "^7.7.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-simple-import-sort": "^5.0.3",
        "git-describe": "^4.0.4",
        "gulp": "^4.0.2",
        "lerna": "^3.22.1",
        "prettier": "^2.0.5",
        "semver": "^7.3.2",
        "syncpack": "^5.5.6",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    }
}
