{
    "extends": "./packages/pyright/.eslintrc.json",
    "root": true,
    "rules": {
        "simple-import-sort/imports": [
            "error",
            {
                "groups": [
                    // Defaults from simple-import-sort, but with local packages between third-party and relative imports.
                    ["^\\u0000"],
                    ["^@?\\w"],
                    ["^[^.]"],
                    ["^pyright"],
                    ["^pylance"],
                    ["^\\."]
                ]
            }
        ]
    }
}
