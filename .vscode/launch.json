{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pylance Tests",
            "type": "node",
            "request": "launch",
            "args": [
                "--config",
                "${workspaceRoot}/server/jest.config.js",
                "-runInBand"
            ],
            "cwd": "${workspaceRoot}/server",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/server/node_modules/jest/bin/jest"
        },
        {
            "name": "Pylance Debug Client",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/client/out/src/extension.js",
            "preLaunchTask": "npm: build",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/client"
            ],
            "stopOnEntry": false,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/server/out/**/*.js"
            ]
        },
        {
            "name": "Pylance Attach Server",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "port": 6600,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/server/out/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Pylance Launch Server",
            "program": "${workspaceRoot}/dist/server.bundle.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "--node-ipc"
            ],
            "sourceMaps": true,
            "stopOnEntry": true
        },
        {
            "name": "Pylance jest current file",
            "type": "node",
            "request": "launch",
            "args": [
                "${fileBasenameNoExtension}",
                "--config",
                "${workspaceRoot}/server/jest.config.js"
            ],
            "cwd": "${workspaceFolder}/server",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/server/node_modules/jest/bin/jest",
            "windows": {
                "program": "${workspaceFolder}/server/node_modules/jest/bin/jest"
            }
        },
        {
            "name": "Pylance fourslash current file",
            "type": "node",
            "request": "launch",
            "args": [
                "pylanceFourSlashRunner.test.ts",
                "-t ${fileBasenameNoExtension}",
                "--config",
                "${workspaceRoot}/server/jest.config.js"
            ],
            "cwd": "${workspaceFolder}/server",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/server/node_modules/jest/bin/jest",
            "windows": {
                "program": "${workspaceFolder}/server/node_modules/jest/bin/jest"
            }
        },
        {
            "name": "PyRight Tests",
            "type": "node",
            "request": "launch",
            "args": [
                "--config",
                "${workspaceRoot}/server/pyright/server/jest.config.js",
                "-runInBand"
            ],
            "cwd": "${workspaceRoot}/server/pyright/server",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/server/pyright/server/node_modules/jest/bin/jest"
        },
        {
            "name": "Pyright Debug Client",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/server/pyright/client/out/src/extension.js",
            "preLaunchTask": "npm: build:pyrightDebug",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/server/pyright/client"
            ],
            "stopOnEntry": false,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/server/pyright/server/out/**/*.js"
            ]
        },
        {
            "name": "Pyright Attach Server",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "port": 6600,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/server/pyright/server/out/**/*.js"
            ]
        },
        {
            // we have pyright and Pylance since jest.config.js is different.
            "name": "PyRight jest current file",
            "type": "node",
            "request": "launch",
            "args": [
                "${fileBasenameNoExtension}",
                "--config",
                "${workspaceRoot}/server/pyright/server/jest.config.js"
            ],
            "cwd": "${workspaceRoot}/server/pyright/server",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/server/pyright/server/node_modules/jest/bin/jest",
            "windows": {
                "program": "${workspaceFolder}/server/pyright/server/node_modules/jest/bin/jest"
            }
        },
        {
            "name": "PyRight fourslash current file",
            "type": "node",
            "request": "launch",
            "args": [
                "fourSlashRunner.test.ts",
                "-t ${fileBasenameNoExtension}",
                "--config",
                "${workspaceRoot}/server/pyright/server/jest.config.js"
            ],
            "cwd": "${workspaceRoot}/server/pyright/server",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/server/pyright/server/node_modules/jest/bin/jest",
            "windows": {
                "program": "${workspaceFolder}/server/pyright/server/node_modules/jest/bin/jest"
            }
        },
        {
            "name": "IntelliCode Debug CLI",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/pythia/dist/pythia/src/pythia.js",
                "pipeline",
                "${workspaceRoot}/pythia/src/tests/data/repo1",
                "${workspaceRoot}/pythia/src/tests/out/repo1_test",
                "repo1"
            ],
            "stopOnEntry": false,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/server/out/**/*.js"
            ]
        },
        {
            "name": "IntelliCode CLI jest current file",
            "type": "node",
            "request": "launch",
            "args": [
                "${fileBasenameNoExtension}",
                "--config",
                "${workspaceRoot}/pythia/jest.config.js"
            ],
            "cwd": "${workspaceFolder}/pythia",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/pythia/node_modules/jest/bin/jest",
            "windows": {
                "program": "${workspaceFolder}/pythia/node_modules/jest/bin/jest"
            }
        },
        {
            "name": "LS Extension tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceFolder}/extension",
                "--extensionTestsPath=${workspaceFolder}/extension/out/tests/jest/jest-test-runner"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/extension/out/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "npm: build:extension",
        }
    ]
}
