{
    "version": "0.2.0",
    "configurations": [
        // Debug client
        {
            "name": "Pylance debug client",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/packages/pylance-client/dist/extension.js",
            "preLaunchTask": "npm: build:debugclient:dev",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/pylance-client"],
            "stopOnEntry": false,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/packages/pylance-client/dist/**/*.js"]
        },
        {
            "name": "Pylance debug client (watch mode)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/packages/pylance-client/dist/extension.js",
            "preLaunchTask": "Watch debug client",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/pylance-client"],
            "stopOnEntry": false,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/packages/pylance-client/dist/**/*.js"]
        },
        {
            "name": "Pylance debug client attach server",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "port": 6600,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/packages/pylance-client/dist/**/*.js"]
        },

        // Pylance tests
        {
            "name": "Pylance tests",
            "type": "node",
            "request": "launch",
            "args": ["--runInBand"],
            "cwd": "${workspaceRoot}/packages/pylance-internal",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/packages/pylance-internal/node_modules/jest/bin/jest"
        },
        {
            "name": "Pylance jest current file",
            "type": "node",
            "request": "launch",
            "args": ["${fileBasenameNoExtension}", "--runInBand"],
            "cwd": "${workspaceRoot}/packages/pylance-internal",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/packages/pylance-internal/node_modules/jest/bin/jest"
        },
        {
            "name": "Pylance fourslash current file",
            "type": "node",
            "request": "launch",
            "args": ["pylanceFourSlashRunner.test.ts", "-t ${fileBasenameNoExtension}", "--runInBand"],
            "cwd": "${workspaceRoot}/packages/pylance-internal",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/packages/pylance-internal/node_modules/jest/bin/jest"
        },

        // Published extension
        {
            "name": "Pylance extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/packages/vscode-pylance/dist/extension.bundle.js",
            "preLaunchTask": "npm: build:extension:dev",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-pylance"],
            "stopOnEntry": false,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/packages/vscode-pylance/dist/**/*.js"]
        },
        {
            "name": "Pylance extension (watch mode)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/packages/vscode-pylance/dist/extension.bundle.js",
            "preLaunchTask": "Watch extension",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-pylance"],
            "stopOnEntry": false,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/packages/vscode-pylance/dist/**/*.js"]
        },
        {
            "name": "Pylance extension attach server",
            "type": "node",
            "request": "attach",
            "protocol": "inspector",
            "port": 6600,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/packages/vscode-pylance/dist/**/*.js"]
        },

        // Pyright
        {
            "name": "Pyright tests",
            "type": "node",
            "request": "launch",
            "args": ["--runInBand"],
            "cwd": "${workspaceRoot}/packages/pyright/packages/pyright-internal",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/packages/pyright/packages/pyright-internal/node_modules/jest/bin/jest"
        },
        {
            "name": "Pyright jest current file",
            "type": "node",
            "request": "launch",
            "args": ["${fileBasenameNoExtension}", "--runInBand"],
            "cwd": "${workspaceRoot}/packages/pyright/packages/pyright-internal",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/packages/pyright/packages/pyright-internal/node_modules/jest/bin/jest"
        },
        {
            "name": "Pyright fourslash current file",
            "type": "node",
            "request": "launch",
            "args": ["fourSlashRunner.test.ts", "-t ${fileBasenameNoExtension}", "--runInBand"],
            "cwd": "${workspaceRoot}/packages/pyright/packages/pyright-internal",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/packages/pyright/packages/pyright-internal/node_modules/jest/bin/jest"
        },

        // Not yet working
        {
            "name": "IntelliCode Debug CLI",
            "type": "node",
            "request": "launch",
            "args": [
                "${workspaceRoot}/pythia/dist/pythia/src/pythia.js",
                "pipeline",
                "${workspaceRoot}/pythia/src/tests/data/repo1",
                "${workspaceRoot}/pythia/src/tests/out/repo1_test",
                "repo1"
            ],
            "stopOnEntry": false,
            "smartStep": true,
            "sourceMaps": true,
            "outFiles": ["${workspaceRoot}/server/out/**/*.js"]
        },
        {
            "name": "IntelliCode CLI jest current file",
            "type": "node",
            "request": "launch",
            "args": ["${fileBasenameNoExtension}", "--config", "${workspaceRoot}/pythia/jest.config.js"],
            "cwd": "${workspaceFolder}/pythia",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/pythia/node_modules/jest/bin/jest",
            "windows": {
                "program": "${workspaceFolder}/pythia/node_modules/jest/bin/jest"
            }
        },
        {
            "name": "LS Extension tests",
            "type": "extensionHost",
            "request": "launch",
            "preLaunchTask": "npm: build:extension:tests",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--disable-extensions",
                "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-pylance",
                "--extensionTestsPath=${workspaceFolder}/packages/vscode-pylance/out/vscode-pylance/src/tests/jest/jest-test-runner"
            ],
            "stopOnEntry": false,
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/packages/vscode-pylance/out/**/*.js"],
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "Debug current TS file",
            "type": "node",
            "request": "launch",
            "args": ["${file}"],
            "env": { "TS_NODE_PROJECT": "./tsconfig.withBaseUrl.json" },
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "-r", "tsconfig-paths/register"],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/packages/pylance-internal",
            "protocol": "inspector"
        }
    ]
}
